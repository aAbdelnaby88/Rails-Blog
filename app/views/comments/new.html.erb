<%= form_tag(comments_path , method: "post") do %>
    <div class="form-group">
        <%= text_field_tag(:title, nil, placeholder: "Title...", class: "form-control") %>
    </div>
    <div class="form-group">
        <%= text_area_tag(:content ,nil ,placeholder: "Content...", class: "form-control" ) %>
    </div>
    <%= submit_tag "Comment" , class: "btn btn-success btn-block" %>
<% end %>